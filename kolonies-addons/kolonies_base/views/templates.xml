<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="marketplace_dashboard_link" name="Link to Marketplace Dashboard" inherit_id="odoo_marketplace.marketplace_dashboard_link">
      <xpath expr="//t[@t-if='website.env.user.sudo().partner_id.seller']" position="after">
        <a href="/my/dashboard"
           class="dropdown-item"
           role="menuitem"
           groups="kolonies_base.marketplace_buyer_group">
          My Dashboard
        </a>
      </xpath>
    </template>

  </data>
</odoo>