<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="marketplace_seller_form_view_inherit" model="ir.ui.view">
      <field name="name">marketplace.seller.form.view.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="odoo_marketplace.wk_seller_form_view"/>
      <field name="arch" type="xml">

        <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
          <button class="oe_stat_button" type="object" name="button_booking_session_show" icon="fa-calendar-check">
            <field string="Booking Sessions" name="booking_session_count" widget="statinfo"/>
          </button>
        </xpath>

      </field>
    </record>

  </data>
</odoo>