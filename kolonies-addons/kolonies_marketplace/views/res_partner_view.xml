<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<record id="wk_seller_form_view_inherit" model="ir.ui.view">
			<field name="name">wk.seller.form.view.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="odoo_marketplace.wk_seller_form_view"/>
			<field name="arch" type="xml">
				<field name="title" position="after">
					<field name="partner_type"/>
					<field name="lang_ids" widget="many2many_tags"/>
				</field>
				<xpath expr="//group[6]" position="after">
					<div class="row">
						<div class="o_hr_skills_group o_group_resume col-lg-6 d-flex">
							<field mode="tree" nolabel="1" name="resume_line_ids" widget="hr_resume">
								<tree>
									<field name="line_type_id"/>
									<field name="name"/>
									<field name="description"/>
									<field name="date_start"/>
									<field name="date_end"/>
									<field name="display_type" invisible="1"/>
								</tree>
							</field>
						</div>
						<div class="o_hr_skills_group o_group_skills col-lg-6 d-flex flex-column">
							<separator string="Skills"/>
							<field mode="tree" nolabel="1" name="skill_ids" widget="hr_skills">
								<tree>
									<field name="skill_type_id" invisible="1"/>
									<field name="skill_id"/>
									<field name="skill_level_id"/>
									<field name="level_progress" widget="progressbar"/>
								</tree>
							</field>
						</div>
					</div>
					<group>
						<group name="website_categ_grp" string="Website Categories">
							<field name="website_category_ids" widget="many2many_tags" nolabel="1"/>
						</group>
						<group name="location_served_grp" string="Locations Served">
							<field name="child_ids" widget="many2many_tags" nolabel="1" domain="[('type', '=', 'other')]"
							       context="{'default_parent_id': active_id, 'default_type': 'other', 'form_view_ref': 'kolonies_marketplace.res_partner_view_form'}"/>
						</group>
					</group>
					<group>
						<group name="seller_level" string="Seller Level">
							<field name="seller_level" nolabel="1"/>
						</group>
						<group/>
					</group>
				</xpath>
				<field name="state_id" position="replace">
					<field name="neighborhood" class="oe_no_button" placeholder="Neighborhood" style="width: 37%"/>
				</field>
			</field>
		</record>
	</data>
	
	<record id="res_partner_view_form" model="ir.ui.view">
		<field name="name">res.partner.view.form</field>
		<field name="model">res.partner</field>
		<field name="priority">500</field>
		<field name="arch" type="xml">
			<form string="Localisation Served">
				<sheet>
					<field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
					<field name="parent_id" invisible="1"/>
					<hr/>
					<group>
						<group>
							<field name="name" string="Localisation Name" attrs="{'required' : [('type', '=', 'other')]}"/>
							<label for="street" string="Address"/>
							<div>
								<div class="o_address_format" name="div_address">
									<field name="street" placeholder="Street..." class="o_address_street"/>
									<field name="street2" placeholder="Street 2..." class="o_address_street"/>
									<field name="city" placeholder="City" style="width: 40%"/>
									<field name="neighborhood" placeholder="Neighborhood" style="width: 37%"/>
									<field name="zip" placeholder="ZIP" style="width: 22%"/>
									<field name="country_id" placeholder="Country" options="{'no_open': True, 'no_create': True}"/>
								</div>
							</div>
							<field name="comment" placeholder="Internal notes..."/>
						</group>
					</group>
					<group/>
				</sheet>
			</form>
		</field>
	</record>
</odoo>